<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/startup_background_color"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:layout_height="match_parent">

    <TableLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TableRow style="@style/CommonHeader"
            android:layout_gravity="center_horizontal">
            <TextView
                android:text="Normal Range"
                android:layout_weight="1"
                android:layout_gravity="center_horizontal"
                style="@style/CommonHeaderText" />
        </TableRow>

        <TableRow style="@style/BodyRow">
            <TextView android:text="Haemoglobin"
                style="@style/BodyText"
                android:layout_weight="0.5" />
            <TextView
                android:text="M: 14-18, F: 12-16 gm%"
                style="@style/BodyText"
                android:layout_weight="0.5" />
        </TableRow>

        <TableRow style="@style/BodyRow">
            <TextView android:text="R.B.C. Count"
                style="@style/BodyText"
                android:layout_weight="0.5" />
            <TextView
                android:text="M: 4.5-5.5, F: 3.8-5.2 mill/cmm"
                style="@style/BodyText"
                android:layout_weight="0.5" />
        </TableRow>

        <TableRow style="@style/BodyRow">
            <TextView android:text="W.B.C. Count"
                style="@style/BodyText"
                android:layout_weight="0.5" />
            <TextView
                android:text="4000-10000 /cmm"
                style="@style/BodyText"
                android:layout_weight="0.5" />
        </TableRow>

        <TableRow style="@style/BodyRow">
            <TextView android:text="Platelets Count"
                style="@style/BodyText"
                android:layout_weight="0.5" />
            <TextView
                android:text="1.5-4.5 Lakh/cmm"
                style="@style/BodyText"
                android:layout_weight="0.5" />
        </TableRow>

        <TableRow style="@style/BodyRow">
            <TextView android:text="Polymorphs"
                style="@style/BodyText"
                android:layout_weight="0.5" />
            <TextView
                android:text="40-70 %"
                style="@style/BodyText"
                android:layout_weight="0.5" />
        </TableRow>

        <TableRow style="@style/BodyRow">
            <TextView android:text="Lymphocytes"
                style="@style/BodyText"
                android:layout_weight="0.5" />
            <TextView
                android:text="20-40 %"
                style="@style/BodyText"
                android:layout_weight="0.5" />
        </TableRow>

        <TableRow style="@style/BodyRow">
            <TextView android:text="Eosinophils"
                style="@style/BodyText"
                android:layout_weight="0.5" />
            <TextView
                android:text="1-6 %"
                style="@style/BodyText"
                android:layout_weight="0.5" />
        </TableRow>

        <TableRow style="@style/BodyRow">
            <TextView android:text="Monocytes"
                style="@style/BodyText"
                android:layout_weight="0.5" />
            <TextView
                android:text="2-10 %"
                style="@style/BodyText"
                android:layout_weight="0.5" />
        </TableRow>

        <TableRow style="@style/BodyRow">
            <TextView android:text="Basophils"
                style="@style/BodyText"
                android:layout_weight="0.5" />
            <TextView
                android:text="0-1 %"
                style="@style/BodyText"
                android:layout_weight="0.5" />
        </TableRow>

        <TableRow style="@style/BodyRow">
            <TextView android:text="M.C.V."
                style="@style/BodyText"
                android:layout_weight="0.5" />
            <TextView
                android:text="76-96 fl"
                style="@style/BodyText"
                android:layout_weight="0.5" />
        </TableRow>

        <TableRow style="@style/BodyRow">
            <TextView android:text="M.C.H."
                style="@style/BodyText"
                android:layout_weight="0.5" />
            <TextView
                android:text="27-31 pg"
                style="@style/BodyText"
                android:layout_weight="0.5" />
        </TableRow>

        <TableRow style="@style/BodyRow">
            <TextView android:text="M.C.H.C."
                style="@style/BodyText"
                android:layout_weight="0.5" />
            <TextView
                android:text="32-96 g/dl"
                style="@style/BodyText"
                android:layout_weight="0.5" />
        </TableRow>

        <TableRow style="@style/BodyRow">
            <TextView android:text="R.D.W."
                style="@style/BodyText"
                android:layout_weight="0.5" />
            <TextView
                android:text="11.5-14 %"
                style="@style/BodyText"
                android:layout_weight="0.5" />
        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>